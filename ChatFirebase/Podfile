  pod 'Firebase/Storage'
  pod 'JSQMessagesViewController'
  pod 'SVProgressHUD'
  pod 'SwiftLint'

  target 'ChatFirebaseTests' do
    inherit!:search_paths
    # Pods for testing
  end

end
